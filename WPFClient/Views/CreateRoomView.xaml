        <Label Content="Description:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="439,103,0,0" Height="31" Width="119"/>
        <Label Content="Price:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,300,0,0" Height="31" Width="119"/>
        <TextBox Name="roomNumberField" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" Margin="300,100,0,0"/>
